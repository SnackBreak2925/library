<div class="page">
  <header class="page-header">
    <h1>Sign up</h1>
  </header>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form form__fieldset" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form form__group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-text input-text__field" %>
    </div>

    <div class="form form__group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input-text input-text__field" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="form form__group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-text input-text__field" %>
    </div>

    <div class="form form__actions">
      <div class="btn btn--outline-primary">
        <%= f.submit "Sign up" %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
